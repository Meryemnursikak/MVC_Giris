
@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>
@{ string[] adlar = new string[3] { "Meryem", "Hatice", "Mihra" };
    int index = 0;

    <ul>
        @foreach (string ad in adlar)
        {
        <li>
            @if (index % 2 == 0)
            {
                <b>
                    @ad
                </b>
            }
            else
            {
                @ad
            }
            

        </li>
        index++;
        }

    </ul>

}
<hr />

